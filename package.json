{
  "name": "rc-calculator",
  "version": "0.1.0",
  "description": "Open-source reinforced concrete calculator built with Elm",
  "private": true,
  "packageManager": "yarn@1.22.22",
  "scripts": {
    "build": "webpack --mode production",
    "build:analyze": "webpack --mode production --env presets=analyze",
    "build:compress": "webpack --mode production --env presets=compress",
    "dev": "webpack serve --mode development --env mode=development",
    "elm-analyse": "elm-analyse -s -o",
    "lint": "stylelint src/assets/styles/**/*.scss",
    "test": "elm-test",
    "format": "elm-format .",
    "clean": "rimraf dist",
    "prod": "npm run build",
    "prod:analyze": "npm run build:analyze",
    "prod:compress": "npm run build:compress"
  },
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "browserslist": [
    "defaults",
    "not dead"
  ],
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.8",
    "elm": "^0.19.1-6",
    "elm-format": "^0.8.8",
    "elm-test": "^0.19.1-revision17",
    "katex": "^0.16.25"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "compression-webpack-plugin": "^11.1.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "elm-analyse": "^0.16.5",
    "elm-webpack-loader": "^8.0.0",
    "html-webpack-plugin": "^5.6.3",
    "mini-css-extract-plugin": "^2.9.4",
    "postcss-loader": "^8.2.0",
    "postcss": "^8.5.6",
    "postcss-scss": "^4.0.9",
    "rimraf": "^6.0.1",
    "sass": "^1.93.3",
    "sass-loader": "^16.0.6",
    "style-loader": "^4.0.0",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-webpack-plugin": "^5.0.1",
    "terser-webpack-plugin": "^5.3.14",
    "webpack": "^5.101.3",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^6.0.1"
  }
}
